<%- include ("../partials/header") %>
<%- include ("../partials/main_nav") %>

<!-- Content for the Add Course Page -->
<div class="containerCenter">
    <div class="col-md-offset-3 col-md-6">
        <h1 class="listTitle"><%= title %></h1> <br><br>
        <form class="form" method="POST" action="/courses/add">

            <!-- Course Name -->
            <div class="form-group">
                <label for="courseNameTextField">Course Name</label>
                <input type="text" class="form-control" 
                    id="courseNameTextField"
                    placeholder="Enter Course Name"
                    name="courseName" required>
            </div>

            <!-- Credits -->
            <div class="form-group">
                <label for="creditsTextField">Credits</label>
                <input type="number" class="form-control" 
                    id="creditsTextField"
                    placeholder="Enter Course Credits"
                    name="credits" required min="0">
            </div>
<!-- Grade -->
<div class="form-group">
  <label for="gradeTextField">Grade</label>
  <input type="text" class="form-control" 
      id="gradeTextField"
      placeholder="Enter Grade (e.g., A, B, C)"
      name="grade">
</div>
            <!-- Instructor -->
           <!-- Instructor -->
           <div class="form-group">
            <label for="instructorSelect">Instructor</label>
            <select class="form-control" id="instructorSelect" name="instructorId" required>
                <% if (instructors.length > 0) { %>
                    <% instructors.forEach(instructor => { %>
                        <% if (instructor.personId && instructor.personId.name) { %>
                            <option value="<%= instructor._id %>"><%= instructor.personId.name %></option>
                        <% } else { %>
                            <option value="<%= instructor._id %>">Unnamed Instructor</option>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <option value="">No instructors available</option>
                <% } %>
            </select>
        </div>
              
              <!-- Debugging: Display the instructors array -->
           

            <br>

            <!-- Submit Button -->
            <button class="btn btn-success fa-submitbtn" type="submit" style="background-color:#FFCC00;"> 
                <i class="fas fa-edit"></i> Submit 
            </button>

            <!-- Cancel Button -->
            <a href="/courses" class="btn fa-delete2">
                <i class="fas fa-undo"></i> Cancel 
            </a>
        </form>
    </div>
</div> 

<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>
